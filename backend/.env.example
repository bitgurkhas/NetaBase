# ──────────────── Django Settings ────────────────
SECRET_KEY=your_secret_key_here
DEBUG=True

DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,hackathon-ten-bay.vercel.app
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:5173,https://hackathon-ten-bay.vercel.app
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173,https://hackathon-ten-bay.vercel.app

# ──────────────── Database ────────────────
DATABASE_URL=postgresql://username:password@host:5432/database

# ──────────────── Cloudinary ────────────────
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ──────────────── JWT Tokens ────────────────
ACCESS_TOKEN_LIFETIME_MINUTES=1200
REFRESH_TOKEN_LIFETIME_DAYS=100

# ──────────────── Admin Contact ────────────────
ADMIN_NAME=Your Name
ADMIN_EMAIL=your_email@example.com

# ──────────────── Email SMTP ────────────────
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=your_email@example.com

# ──────────────── Redis / Cache ────────────────
REDIS_URL=redis://default:password@host:6379
CACHE_TTL=300
